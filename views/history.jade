div.navbar
    div.navbar-inner
        div.container
            a.brand(href='#') trifolium
div.container
    header
        h1= title
    section#history
        div
            each log in logs
                if log.isSucceed
                    div.alert.alert-success
                        h4
                            i.icon-time
                            #{log.gamedate}
                        i.icon-user
                        勇者#{log.brave}は#{log.others.treasure.name}を手に入れた!
                else
                    if log.others
                        div.alert
                            h4
                                i.icon-time
                                #{log.gamedate}
                            i.icon-user
                            勇者#{log.brave}は#{log.others.treasure.name}を見つけたが、持ち物がいっぱいなのであきらめた…
                    else
                        div.alert
                            h4
                                i.icon-time
                                #{log.gamedate}
                            i.icon-user
                            勇者#{log.brave}はアイテムを見つけられなかった…
